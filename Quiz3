section .text
        global _start

_start:
        mov ecx, [var]
        mov eax, ecx
        mov [result], eax
factorial:
        cmp ecx, 1
        jle exit

        sub ecx, 1
        mul ecx
        jmp factorial

exit:
        push eax
        call print
        add eax, 0x30   
        mov eax,1
        int  0x80 

print: 

        mov edx,1 
        mov ebx,1
        mov eax,4
        int 0x80 
        ret        

section .data
        var DD 5

segment .bss
        result resb 1

